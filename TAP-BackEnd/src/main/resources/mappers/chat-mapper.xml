<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Chat">
	<insert id="insert">
		insert into chat values(chat_seq.nextval,#{member_id},#{message},sysdate,${group_seq},0)
		<selectKey resultType="int" order="AFTER" keyProperty="seq">
			select chat_seq.currval from dual
		</selectKey>
	</insert>
	
	<select id="writeDateBySeq" resultType="java.sql.Timestamp">
		select write_date from chat where seq=#{seq}
	</select>
	
	<select id="selectByGroupSeq" resultType="com.tap.chat.dto.ChatDTO">
		select * from chat where group_seq=#{group_seq}
	</select>
</mapper>